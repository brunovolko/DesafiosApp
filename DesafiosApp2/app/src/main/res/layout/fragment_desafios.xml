<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.DesafiosFragment"
    android:paddingBottom="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Top nav -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:id="@+id/topNavBar"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/desafiosblue"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/displayCantDesafios"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/btnNuevoDesafio"
            android:text="Crear mi desafío"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="#340067"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewDesafios"></ListView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/displayNoDesafios1"
            android:layout_marginTop="40px"
            android:visibility="invisible"
            android:text="No hay desafios disponibles :("/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:textSize="15dp"
            android:id="@+id/displayNoDesafios2"
            android:visibility="invisible"
            android:textAlignment="center"
            android:text="Sigue a mas usuarios, y tendrás mas desafíos!"/>



    </LinearLayout>


</FrameLayout>
